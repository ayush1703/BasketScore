<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="in.co.ayushjain.basketscore.MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout">
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="1"
    android:layout_gravity="center_horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team A"
        android:textSize="36sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/textViewA"
        android:layout_gravity="center_horizontal"
        android:textSize="36sp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="+3 point"
        android:id="@+id/button1A"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:onClick="point3AClick"
        android:background="#f18b0f" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="+2 point"
        android:id="@+id/button2A"
        android:layout_gravity="center_horizontal"
        android:onClick="point2AClick"
        android:background="#f18b0f"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="Free Throw"
        android:id="@+id/button3A"
        android:layout_gravity="center_horizontal"
        android:onClick="point1AClick"
        android:background="#f18b0f"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team B"
            android:textSize="36sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/textViewB"
            android:layout_gravity="center_horizontal"
            android:textSize="36sp" />

        <Button
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="+3 point"
            android:id="@+id/button1B"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:onClick="point3BClick"
            android:background="#f18b0f"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="+2 point"
            android:id="@+id/button2B"
            android:layout_gravity="center_horizontal"
            android:onClick="point2BClick"
            android:background="#f18b0f"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="Free Throw"
            android:id="@+id/button3B"
            android:layout_gravity="center_horizontal"
            android:onClick="point1BClick"
            android:background="#f18b0f"/>
    </LinearLayout>
</LinearLayout>

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_time"
        android:textColor="#1c1c1c"
        android:textSize="40sp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />
    <Button
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="Reset"
        android:id="@+id/button"
        android:singleLine="false"
        android:onClick="reset"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#f18b0f"
        android:layout_marginTop="16dp" />

</RelativeLayout>
